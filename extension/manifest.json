{
  "manifest_version": 3,
  "name": "OnHyper Dev",
  "version": "0.1.0",
  "description": "Test OnHyper apps locally with your API keys",
  "permissions": ["storage", "declarativeNetRequest", "activeTab"],
  "host_permissions": [
    "*://localhost/*",
    "file:///*",
    "https://api.openai.com/*",
    "https://api.anthropic.com/*",
    "https://openrouter.ai/*",
    "https://atoms.api.scoutos.com/*"
  ],
  "action": { "default_popup": "popup/popup.html" },
  "background": { 
    "service_worker": "background/service-worker.js",
    "type": "module"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}