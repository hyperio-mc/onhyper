# Server
PORT=3000
HOST=0.0.0.0
BASE_URL=http://localhost:3000

# Database
SQLITE_PATH=./data/onhyper.db
LMDB_PATH=./data/onhyper.lmdb

# Security - CHANGE THESE IN PRODUCTION!
ONHYPER_JWT_SECRET=change-me-in-production-use-secure-random-string
ONHYPER_MASTER_KEY=change-me-in-production-32-bytes-hex

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Proxy
PROXY_TIMEOUT_MS=30000
PROXY_MAX_REQUEST_SIZE=5242880
PROXY_MAX_RESPONSE_SIZE=5242880

# PostHog Analytics
# Get your key from https://app.posthog.com/project/settings
POSTHOG_KEY=phc_placeholder_replace_with_real_key
POSTHOG_HOST=https://app.posthog.com

# Frontend Analytics (SvelteKit uses VITE_ prefix for client-side env vars)
# Set these in the frontend/.env file
# VITE_PUBLIC_POSTHOG_KEY=phc_placeholder_replace_with_real_key
# VITE_PUBLIC_POSTHOG_HOST=https://app.posthog.com